APP_ENV=production
DEBUG=false
SECRET_KEY=${SECRET_KEY}
BACKEND_HOST=0.0.0.0
BACKEND_PORT=${PORT}
BACKEND_CORS_ORIGINS=*

# Database - Railway injects DATABASE_URL automatically
DB_BACKEND=postgresql
DATABASE_URL=${DATABASE_URL}

# Redis - Railway injects REDIS_URL automatically
REDIS_URL=${REDIS_URL}

# Storage (use local for now, switch to S3 later)
STORAGE_BACKEND=local
LOCAL_STORAGE_DIR=/app/storage

# Auth
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Voice Engine
TORCH_DEVICE=cpu
MIN_RECORDINGS_FOR_TRAINING=5
AUDIO_SAMPLE_RATE=22050
MAX_RECORDING_DURATION_SECONDS=30

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

LOG_LEVEL=INFO
